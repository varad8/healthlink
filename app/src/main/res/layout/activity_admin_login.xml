<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin.AdminLogin">


    <LinearLayout
        android:id="@+id/ryt"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#7071f0"
        android:gravity="center_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/poppins_medium"
            android:text="Admin Login"
            android:textAlignment="center"
            android:textColor="@color/dark_pallette_light"
            android:textSize="22dp" />



    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="110dp"
        android:elevation="4dp"
        android:orientation="vertical"
        android:background="@drawable/bg_white_10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/textEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="36dp"
            android:text="Email"
            android:textAlignment="center"
            android:textColor="#7F7FD1"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/adminEmail"
            android:background="@drawable/button_reg"
            android:backgroundTint="#ffffff"
            android:elevation="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:padding="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp" />


        <TextView
            android:id="@+id/textPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="Password"
            android:textAlignment="center"
            android:textColor="#7F7FD1"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/password"
            android:inputType="textPassword"
            android:background="@drawable/button_reg"
            android:backgroundTint="#ffffff"
            android:elevation="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:padding="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp" />


        <TextView
            android:id="@+id/textKey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="Security Key"
            android:textAlignment="center"
            android:textColor="#7F7FD1"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/key"
            android:inputType="textPassword"
            android:background="@drawable/button_reg"
            android:backgroundTint="#ffffff"
            android:elevation="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:padding="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp" />



        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/loginBtnAdmin"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_reg"
            android:elevation="5dp"
            android:onClick="adminLogin"
            android:text="Login"
            android:textAllCaps="false"
            android:textColor="@color/white" />


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>